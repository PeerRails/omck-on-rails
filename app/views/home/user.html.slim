.container
  .panel.panel-default
    .panel-body
      .page-header
        h1
          | Hello,
          = current_user.name
  .row
    .col-md-2#navs
      .panel.panel-primary
        .panel-heading
          | Навигация
        .panel-body
          ul.nav.nav-pills.nav-stacked
            li.active
              a href="#index" Главная
            - if can? :manage, Key
            /li
              /a href="#keys" Ключи
            - if can? :list, Video
              li
                a href="#videos" Видосики
            li
              a href="#channels" Каналы
            li
              a href="#streamers" Стримеры
            li
              a href="#guest" Гостевые ключи
            - if can? :manage, :all
              li
                a href="#settings" Настройки ОмскТВ
            - if current_user
              li
                a href="/logout" Выйти
    .col-md-8#info
      .panel.panel-primary
        .panel-heading
          | Ваши данные
        .panel-body
        table.table#userinfo data-twitterid="#{current_user.twitter_id}" data-userid="#{current_user.id}"
          tr
            td#input-img
            td
            td
          tr
            td Имя
            td#input-name
            td
          tr
            td Ник
            td#input-screen
            td
          tr
            td Права
            td#input-priv
            td
          - if can? :manage, Key
            tr
              td Ключ
              td#input-key
              td
                a data-key="regenerate" onclick="postRegeneration()" Пересоздать ключ
            tr
              td
                | Выводимое имя стримера
                .form-group
                  input#inputStreamer type="text" class="form-control"
                br
                #responseKeyData
              td
                | Выводимое название игры
                .form-group
                  textarea#inputGame type="text" class="form-control"
              td
                |Выводимое название кинца
                #form-group
                  textarea#inputMovie type="text" class="form-control"
    .col-md-8#videos
      .panel.panel-primary
          .panel-heading
            | Видосики
          .panel-body
            #responseVideo
            table.table#videoList
              tr
                td
                td Название
                td Дата
                td
    .col-md-10#channels
      .panel.panel-primary
          .panel-heading
            | Каналы
          .panel-body
            #responseChannel
            .form-inline#inputNewChannel
              .form-group
                label Имя Канала
                input#inputChannel type="text" class="form-control" value="Dwarf"
              .form-group
                label Стример
                input#inputChannelStreamer type="text" class="form-control" value="McDwarf"
              button.btn.btn-success onclick="addChannel()" Добавить
            table.table-bordered.table-hover#channelList
              tr
                td Канал
                td Стример
                td Описание
                td Сервис
                td Статус
                td
    .col-md-10#users
      .panel.panel-primary
          .panel-heading
            | Стримеры
          .panel-body
            #responseUser
            .form-inline#inputNewUser
              .form-group
                label E-Mail
                input#inputEmail type="text" class="form-control"
              .form-group
                label Или твиттер
                input#inputTwitter type="text" class="form-control" value="@McDwarf"
              button.btn.btn-success onclick="inviteUser()" Пригласить
            table.table#userList
              tr
                td Имя
                td Твиттер
                td Мыло
                td
                td
    .col-md-10#guests
      .panel.panel-primary
          .panel-heading
            | Гости
            .small Ключ будет показан ниже, передать лично в руки гостю!
          .panel-body
            #responseGuest
            .form-inline#inputNewGuest
              .form-group
                label Ник гостя
                input#inputGuestName type="text" class="form-control" value="McDwarf"
              .form-group
                label Игра
                input#inputGuestGame type="text" class="form-control" value="Dark Souls 3"
              .form-group
                label Кинчик
                input#inputGuestMovie type="text" class="form-control" value="Boku No Pico"
              button.btn.btn-success onclick="inviteGuest()" Пригласить
            table.table#guestList
              tr
                td Имя
                td Игра
                td Кино
                td Пригласил
                td
                td
