.container
  .row
    = bootstrap_flash
  .row.jumbotron
    - if @user_key.nil?
      .col-md-4.col-md-offset-4
      = render 'guest_form'
    - else
      .col-md-6
        = render 'instruction'
      .col-md-6
        %h2 Ваши данные
        %table.table
          %tbody
            %tr
            %td
              %b Имя
            %td
              %b Ключ
            %td
              %b Игра
            %td
              %b Действителен до
            %tr
            %td= @user_key.streamer
            %td= @user_key.key
            %td= @user_key.game
            %td= @user_key.expires
