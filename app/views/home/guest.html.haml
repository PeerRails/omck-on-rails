.container
  .row
    = bootstrap_flash
  .row.jumbotron
    - if @user_key.nil?
      .col-md-4.col-md-offset-4
      #h1 Введите ключ свой
      = bootstrap_form_tag url: '/guest' do |f|
        = f.text_field :key, placeholder: 'XXXXXX'
        = f.submit "Отправить"
    - else
      .col-md-6
        = render 'instruction'
      .col-md-6
        %h2 Ваши данные
        %table.table
          %tbody
            %tr
            %td
              %b Имя
            %td
              %b Ключ
            %td
              %b Игра
            %td
              %b Действителен до
            %tr
            %td= @user_key.streamer
            %td= @user_key.key
            %td= @user_key.game
            %td= @user_key.expires
          = link_to "Пересоздать ключ", home_remake_key_path(key: @user_key.key)
